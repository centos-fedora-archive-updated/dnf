diff --git a/dnf/yum/config.py b/dnf/yum/config.py
index 1be7167..803eb3b 100644
--- a/dnf/yum/config.py
+++ b/dnf/yum/config.py
@@ -772,7 +772,7 @@ class YumConf(BaseConfig):
     enablegroups = BoolOption(True)
 
     bandwidth = BytesOption(0)
-    minrate = BytesOption(0)
